{
    "manifest_version": 3,
    "name": "Mark As Read",
    "version": "1.0.1",
    "description": "Mark a page as read by clicking on the extension icon. ",
    "action": {
        "default_icon": { 
            "128": "icon_128.png",
            "48": "icon_48.png",
            "16": "icon_16.png"
        }
    },
    "background": { 
        "service_worker":  "background.js",
         "type": "module" 
    },
    "commands": {
        "mark_page": {
            "suggested_key": {
                "default": "Ctrl+Shift+Z"
            },
            "description": "Mark/unmark the current page"
        }
    },
    "icons" : {
        "128": "icon_128.png",
        "48": "icon_48.png",
        "16": "icon_16.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "downloads",
        "unlimitedStorage",
        "scripting"
    ],
    "host_permissions": [
        "http://*/", 
        "https://*/"
    ],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "content-scripts/changeLinkColor.js"
        ]
      }],
    "options_page": "options.html"
}